generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}
 model Pizza {
  id         Int        @id @default(autoincrement())
 title       String
description  String
image        String
prices       Int
type         String
 varients  Varients  @relation(fields: [varientId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  varientId Int
}
model Varients{
  id         Int        @id @default(autoincrement())
  varients   String
pizza       Pizza[]
}
model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}
